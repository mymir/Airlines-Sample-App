<%= form_tag('/bookings/new', method: 'get') do %>
  <% @flights.each do |flight| %>
    <%= radio_button_tag(:flight_id, flight.id) %>
      <span>
        <strong>Departing From: </strong><%= flight.from_airport.code %>,
        <strong>Arriving At: </strong><%= flight.to_airport.code %>,
        <strong>Departure Date: </strong><%= flight.departure %>,
        <strong>Flight Duration: </strong><%= flight.flight_duration %> hours,
        <strong>Flight Price: </strong>$<%= flight.price %>
      </span><br/>
  <% end %>

  <%= hidden_field_tag(:passenger_count, params[:passengers]) %>
  <%= submit_tag 'Book Flight' %>
<% end %>
